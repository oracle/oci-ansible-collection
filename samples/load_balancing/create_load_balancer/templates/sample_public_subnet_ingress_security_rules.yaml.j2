sample_public_subnet_ingress_security_rules:
  # HTTP
  - source: "{{ all_cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ http_port }}
        max: {{ http_port }}
  # SSL/TLS
  - source: "{{ all_cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ https_port }}
        max: {{ https_port }}


