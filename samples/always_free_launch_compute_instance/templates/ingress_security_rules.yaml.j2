instance_ingress_security_rules:
  # Allow incoming SSH connections
  - source: "{{ quad_zero_route }}"
    protocol: "{{ TCP_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ SSH_port }}
        max: {{ SSH_port }}

