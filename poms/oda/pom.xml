      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>ansible-modules-oda-clean-generated-modules</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${project-root-dir}/scripts/clean_generated_modules.py</executable>
              <arguments>
                <argument>${modules-output-directory}/oci_oda*.py</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ansible-modules-oda-format-descriptions</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${project-root-dir}/scripts/format_generated_descriptions.py</executable>
              <arguments>
                <argument>${modules-output-directory}/oci_oda*.py</argument>
                <argument>${module-whitelist-file}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ansible-modules-oda-format-code</id>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${project-root-dir}/scripts/run-black</executable>
              <arguments>
                <argument>${modules-output-directory}/oci_oda*.py</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>${test-output-directory}</directory>
              <includes>
                <include>oci_generated_oda*</include>
                <include>oci_generated_oda*/tasks/*</include>
                <include>oci_generated_oda*/tasks</include>
                <include>oci_generated_oda*/meta/*</include>
                <include>oci_generated_oda*/meta</include>
                <include>oci_generated_oda*/vars</include>
              </includes>
              <excludes>
                <include>oci_generated_oda*/tasks/main.yaml</include>
                <include>oci_generated_oda*/tasks/*_setup.yaml</include>
                <include>oci_generated_oda*/tasks/*_teardown.yaml</include>
                <include>oci_generated_oda*/vars/main.yaml</include>
              </excludes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>
      <!-- Spec verison dependency -->
      <dependency>
        <groupId>com.oracle.pic.oda.cp</groupId>
        <artifactId>digital-assistant-spec</artifactId>
        <version>0.0.6</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>